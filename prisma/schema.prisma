// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id                Int     @default(autoincrement()) @id
  email             String  @unique
  name              String
  encryptPassword   String
  posts             Post[]
}

model Post {
  id            Int      @default(autoincrement()) @id
  name          String?
  description   String?
  chip          String?
  gender        String
  image         String
  race          String
  situation     String
  reward        Float?
  addressLat    Float?
  addressLng    Float?
  addressLabel  String?
  postedAt      DateTime   @default(now())
  author        User    @relation(fields: [authorId], references: [id])
  authorId      Int
}